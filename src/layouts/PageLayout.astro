---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${SITE.NAME} - ${title}`} description={description} />
  </head>
  <body
  class="absolute inset-0 h-full w-full bg-white bg-[radial-gradient(#eeeeee_1px,transparent_2px)] [background-size:28px_28px]"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
