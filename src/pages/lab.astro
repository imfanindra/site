---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { SITE, SOCIALS, LAB } from "@consts";
---

<PageLayout title={LAB.TITLE} description={LAB.DESCRIPTION}>
  <Container>
    <section class="sm:py-16 mx-auto max-w-screen-lg space-y-16">
      <div class="flex flex-col">
        <h4
          class="animate text-md mb-4 font-medium text-black/50 dark:text-white/75"
        >
          Design Explorations
        </h4>
        <h1
          class="animate text-2xl tracking-loose leading-9 text-black dark:text-white"
        >
          Check out some of my design explorations
        </h1>
      </div>

      <article class="animate flex flex-col gap-8">


        <!-- Item 1 -->

        <div class="flex flex-col dark:hidden">
          <p>01 / What if there are separate tabs for chats and groups on WhatsApp</p>
          <img src="/lab/1_wa_light.gif" alt="" class="rounded-lg" />
        </div>

        <div class="flex flex-col hidden dark:inline">
          <p>01 / What if there are separate tabs for chats and groups on WhatsApp</p>
          <img src="/lab/1_wa_dark.gif" alt="" class="rounded-lg" />
        </div>



        <!-- Item 2 -->

        <div class="flex flex-col dark:hidden">
          <p>02 / Sign-up screens</p>
          <img src="/lab/2_signup_screens_light.webp" alt="" class="rounded-lg" />
        </div>

        <div class="flex flex-col hidden dark:inline">
          <p>02 / Sign-up screens</p>
          <img src="/lab/2_signup_screens_dark.webp" alt="" class="rounded-lg" />
        </div>
        
        
        
        
        <!-- Item 3 -->

        <div class="flex flex-col dark:hidden">
          <p>03 / CRED style button</p>
          <img src="/lab/3_cred_light.gif" alt="" class="rounded-lg" />
        </div>

        <div class="flex flex-col hidden dark:inline">
          <p>03 / CRED style button</p>
          <img src="/lab/3_cred_dark.gif" alt="" class="rounded-lg" />
        </div>



        <!-- Item 4 -->

        <div class="flex flex-col dark:hidden">
          <p>04 / Login Screens for mobile application</p>
          <img src="/lab/4_login_light.webp" alt="" class="rounded-lg" />
        </div>

        <div class="flex flex-col hidden dark:inline">
          <p>04 / Login Screens for mobile application</p>
          <img src="/lab/4_login_dark.webp" alt="" class="rounded-lg" />
        </div>


        <!-- Item 5 -->

        <div class="flex flex-col dark:hidden">
          <p>05 / Widgets design for a to-do list app</p>
          <img src="/lab/5_todo_widget_light.webp" alt="" class="rounded-lg" />
        </div>

        <div class="flex flex-col hidden dark:inline">
          <p>05 / Widgets design for a to-do list app</p>
          <img src="/lab/5_todo_widget_dark.webp" alt="" class="rounded-lg" />
        </div>


        <!-- Item 6 -->

        <div class="flex flex-col dark:hidden">
          <p>06 / Onboarding Screens</p>
          <img src="/lab/6_onboarding_light.webp" alt="" class="rounded-lg" />
        </div>

        <div class="flex flex-col hidden dark:inline">
          <p>06 / Onboarding Screens</p>
          <img src="/lab/6_onboarding_dark.webp" alt="" class="rounded-lg" />
        </div>


      </article>
    </section>
  </Container>
</PageLayout>
